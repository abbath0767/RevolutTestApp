<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_currency_height">

    <!--todo make circle photo-->
    <TextView
            android:id="@+id/currency_photo"
            android:layout_width="@dimen/item_currency_photo_size"
            android:layout_height="@dimen/item_currency_photo_size"
            android:layout_marginRight="@dimen/common_16"
            android:gravity="center"
            android:text="Add Photo View pls"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/currency_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_currency_title_size"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/currency_photo"
            android:layout_alignTop="@id/currency_photo"
            android:maxLength="100"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/common_8"
            tools:text="USD"/>

    <TextView
            android:id="@+id/currency_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_currency_subtitle_size"
            android:layout_toRightOf="@id/currency_photo"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@id/currency_title"
            android:maxLength="100"
            android:ellipsize="end"
            tools:text="American Dollar"/>

    <EditText
            android:id="@+id/currency_rate_and_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_currency_title_size"
            android:textColor="@android:color/black"
            android:layout_alignParentRight="true"
            android:hint="@string/zero"
            android:focusableInTouchMode="true"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:maxLength="6"
            android:inputType="numberDecimal"
            tools:text="1234.56"/>

</RelativeLayout>